#!/bin/bash

# Получаем список каталогов из переменной окружения PATH
directories=$(echo $PATH | tr ':' ' ')

# Переменная для подсчета общего числа файлов
total_files=0

# Цикл для обхода каждого каталога
for dir in $directories; do
    # Подсчитываем количество файлов в текущем каталоге
    file_count=$(ls -l $dir | grep -v ^d | wc -l)
    
    # Выводим полный путь к каталогу и количество файлов
    echo "$dir - $file_count"
    
    # Увеличиваем общее число файлов
    total_files=$((total_files + file_count))
done

# Выводим разделительную линию
echo "==================="

# Выводим общее число файлов
echo "Всего: $total_files файлов"
